<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        tools:ignore="RelativeOverlap">


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView

            android:id="@+id/edit_rule_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/add_local_rule"
            tools:ignore="RelativeOverlap" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_marginRight="10dp"
            android:id="@+id/top_image_view"
            android:contentDescription="@string/to_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:src="@drawable/top"
            tools:targetApi="lollipop" />

        <ImageButton
            android:id="@+id/edit_image_view"
            android:contentDescription="@string/edit_cur_rule"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/edit"
            tools:targetApi="lollipop" />

        <ImageButton
            android:id="@+id/remove_image_view"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/remove"
            android:src="@drawable/remove"
            tools:targetApi="lollipop" />
    </LinearLayout>

</RelativeLayout>